<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/amount"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="eg: 3"
        android:inputType="text|number"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.EditText" />

    <EditText
        android:id="@+id/unit"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="eg: g / ml"
        android:inputType="textPersonName"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.EditText" />

    <EditText
        android:id="@+id/ingredient"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/unit"
        android:ems="10"
        android:hint="eg: eggs"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText" />

    <ImageButton
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="0dp"
        android:adjustViewBounds="true"
        android:background="@android:drawable/ic_menu_delete"
        android:padding="0dp" />

</RelativeLayout>